apple_bundle(
    name = "App",
    binary = ":AppBinary",
    extension = "app",
    info_plist = "Info.plist",
    info_plist_substitution = APPLICATION_SUBSTITUTION,
    visibility = ['PUBLIC'],
)

apple_binary(
    name = "AppBinary",
    srcs = glob([
        "*.m",
        "*.swift",
    ]),
    frameworks = [
        "$SDKROOT/System/Library/Frameworks/Foundation.framework",
        "$SDKROOT/System/Library/Frameworks/UIKit.framework",
    ],
    deps = [
        '//Dependencies/Pods/RxSwift:RxSwift',
        '//Dependencies/Pods/RxCocoa:RxCocoa'
    ],
)

apple_package(
    name = "AppPackage",
    bundle = ":App",
)
